{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test/**/*"
  ]
}
